{{#if development}}
  {{#mdc-layout-grid}}
    {{#mdc-layout-grid-cell desktopColumns=4 tabletColumns=4 phoneColumns=4}}
      youtube.isAuthenticated: {{youtube.isAuthenticated}}
    {{/mdc-layout-grid-cell}}

    {{#mdc-layout-grid-cell desktopColumns=4 tabletColumns=4 phoneColumns=4}}
      this.authenticated: {{this.authenticated}}
    {{/mdc-layout-grid-cell}}

    {{#mdc-layout-grid-cell desktopColumns=4 tabletColumns=4 phoneColumns=4}}
