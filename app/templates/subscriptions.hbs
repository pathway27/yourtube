{{#mdc-layout-grid}}
  {{#mdc-layout-grid-cell columns=4}}
    <h3>Data table with row selection (using models)</h3>

    {{#mdc-data-table label="Network"
                      data=filteredSubscriptions
                      selected=selected
                      rowSelectionChange=(action "rowSelectionChange") as |dataTable|}}
      {{#mdc-data-table-header-row}}
        {{mdc-data-table-header-cell checkbox=true}}
        {{#mdc-data-table-header-cell}}
          {{#mdc-layout-grid}}
            {{#mdc-layout-grid-cell columns=3}}
              Channel {{filteredSubscriptions.length}}
            {{/mdc-layout-grid-cell}}

            {{#mdc-layout-grid-cell columns=7}}
              <div class="text-field-row">
                <div class="text-field-container">
                  {{mdc-textfield label="Search" style="standard" name="name" value=this.name }}
                </div>
              </div>
            {{/mdc-layout-grid-cell}}
          {{/mdc-layout-grid}}
        {{/mdc-data-table-header-cell}}
      {{/mdc-data-table-header-row}}

      {{#mdc-data-table-content}}
        {{#each dataTable.data as |channel|}}
          {{#mdc-data-table-row data=channel}}
            {{mdc-data-table-cell checkbox=true}}
            {{#mdc-data-table-cell}}{{channel.snippet.title}}{{/mdc-data-table-cell}}
          {{/mdc-data-table-row}}
        {{/each}}
      {{/mdc-data-table-content}}
    {{/mdc-data-table}}
  {{/mdc-layout-grid-cell}}

  {{#mdc-layout-grid-cell columns=8}}
    {{#mdc-card outlined=true}}

      <div class="content">  
        <h4>Selected Rows:</h4>

        <ul>
          {{#each selected as |selection|}}
            <li>{{selection.id}}</li>
          {{/each}}
        </ul>
      </div>
      
    {{/mdc-card}}
  {{/mdc-layout-grid-cell}}
{{/mdc-layout-grid}}